		type ArrayOfStrings
	matchingFiles
		@context
			dc:description "Matching files"
		type ArrayOfStrings
	patterns
		@context
			dc:description "Generated patterns"
		type ArrayOfStrings
	seeds
		@context
			dc:description "The initial seeds for learning."
		type ArrayOfStrings
	maxIterations
		@context
			dc:description "Maximum number of iterations."
		type Number
	reliabilityThreshold
