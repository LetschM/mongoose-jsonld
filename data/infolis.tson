InfolisFile
	@context
		owl:sameAs
			@id omnom:File
	md5
		@context
			owl:sameAs
				@id omnom:md5
			@type xsd:string
			dc:description "MD5 checksum"
		type String
		validate 'MD5'
		required: no
	fileName
		@context
			@type @id
			owl:sameAs
				@id omnom:fileName
		type String
		required: no
	mediaType
		@context
			owl:sameAs dcat:mediaType
			dc:description "The IANA media type of this file"
		type String
		enum: [
			"application/pdf"
			"text/plain"
		]
		required: no
	fileStatus
		@context
			@id omnom:fileStatus
		type: String
		enum: [
			'AVAILABLE'
			'DELETED'
		]
		required: no
	tags
		@context
			owl:sameAs
				@id dc:subject
			dc:description "A set of free form tags to attach to files"
		type ArrayOfStrings
		required: no
	created
		type Date
		@context
			owl:sameAs
				@id: dc:created
			dc:description "Timestamp when this File was uploaded"

QueryService
	@context
		dc:description "A query service"
	reliability
		@context
			dc:description "The reliablity of this QueryService"
		type: Number
		required: yes
	target
		@context
			dc:description "The target of this QueryService, in most cases a URI"
		type: String
		required: yes
